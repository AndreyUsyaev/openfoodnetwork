%li.links-dropdown#links-dropdown
  .ofn-drop-down{"data-controller": "dropdown", "data-action": "click->dropdown#toggle" }
    %span
      %i.icon-check
      = I18n.t 'admin.actions'
      %i{ "data-dropdown-target": "arrow", "data-expanded-class": "icon-caret-up", "data-collapsed-class": "icon-caret-down" }
    %div.menu.hidden{"data-dropdown-target": "menu"}
      - order_links(@order).each do |link|
        - if link[:name] == t(:ship_order)
          %a.menu_item{ "href" => link[:url], "target" => link[:target] || "_self", "data-modal-link-target-value" => dom_id(@order, :ship), "data-action" => "click->modal-link#open", "data-controller" => "modal-link" }
            %span
              %i{ class: link[:icon] }
            %span=link[:name]
        - else
          %a.menu_item{ "href" => link[:url], "target" => link[:target] || "_self", "data-method" => link[:method], "data-ujs-navigate" => link[:method] ? "false" : "undefined", "data-confirm" => link[:confirm] }
            %span
              %i{ class: link[:icon] }
            %span=link[:name]

= render 'spree/admin/shared/custom-confirm'
